		<Label text="Payment On" />
        <DatePicker enabled="{=${appView>/process} !== 'EXTEND' ? true : false}" value="{Customers>/zpayment_on}" placeholder="Enter Date" valueFormat="MM.dd.yyyy" />
      
        <Label text="Amount" />
