<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:forms="sap.ui.layout.form" xmlns="sap.m" >
	<forms:SimpleForm editable="false" layout="ColumnLayout">
		<Label text="Grouping Key" visible="{=${fieldMappingModels>/GroupingKeyVisible} === true ? true : false}"
		 required="{=${fieldMappingModels>/GroupingKeyMandatory} === true ? true : false}"/>
		<Input enabled="{=${Customers>/zrequest_status} !== 'In Progress' ? true : false}" value="{Customers>/zgrouping_key}" maxLength="2" visible="{=${fieldMappingModels>/GroupingKeyVisible} === true ? true : false}"/>
		<Label text = "Dunning Area" visible="{=${fieldMappingModels>/DunningAreaVisible} === true ? true : false}"
		 required="{=${fieldMappingModels>/DunningAreaMandatory} === true ? true : false}"/>
		<Input enabled="{=${Customers>/zrequest_status} !== 'In Progress' ? true : false}" value="{Customers>/zdunning_area}" maxLength="2" visible="{=${fieldMappingModels>/DunningAreaVisible} === true ? true : false}"/>
		
		<Label text="Dunning Area Description" visible="{=${fieldMappingModels>/DunningAreaDescriptionVisible} === true ? true : false}"
		 required="{=${fieldMappingModels>/DunningAreaDescriptionMandatory} === true ? true : false}"/>
		<Input enabled="{=${Customers>/zrequest_status} !== 'In Progress' ? true : false}" value="{Customers>/zdunning_area_description}" visible="{=${fieldMappingModels>/DunningAreaDescriptionVisible} === true ? true : false}"/>
		
	</forms:SimpleForm>
</mvc:View>